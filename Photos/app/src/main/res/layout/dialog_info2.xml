<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?colorSurface"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:drawableStart="@drawable/ic_outline_folder_24"
                android:drawablePadding="@dimen/dialog_info_row_padding"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:text="@string/path"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/path"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/dialog_info_row_padding"
                android:typeface="monospace"
                tools:text="DCIM/abcxyz" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:drawableStart="@drawable/ic_baseline_calendar_today_24"
                android:drawablePadding="@dimen/dialog_info_row_padding"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:text="@string/date_created"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/dialog_info_row_padding"
                android:typeface="monospace"
                tools:text="@tools:sample/date/mmddyy" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:drawableStart="@drawable/ic_outline_sd_storage_24"
                android:drawablePadding="@dimen/dialog_info_row_padding"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:text="@string/size"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/dialog_info_row_padding"
                android:typeface="monospace"
                tools:text="129MB" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:drawableStart="@drawable/ic_outline_8mp_24"
                android:drawablePadding="@dimen/dialog_info_row_padding"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:text="@string/image_size"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/size_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/dialog_info_row_padding"
                android:typeface="monospace"
                tools:text="1024 x 2048" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:drawableStart="@drawable/ic_outline_gps_fixed_24"
                android:drawablePadding="@dimen/dialog_info_row_padding"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:text="@string/geo"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/geo_place"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/dialog_info_row_padding"
                android:typeface="monospace"
                tools:text="1024 x 2048" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:drawableStart="@drawable/ic_outline_map_24"
                android:drawablePadding="@dimen/dialog_info_row_padding"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:text="@string/location"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/name_place"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/dialog_info_row_padding"
                android:typeface="monospace"
                tools:text="1024 x 2048" />
        </LinearLayout>


    </LinearLayout>
</layout>