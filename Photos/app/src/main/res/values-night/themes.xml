<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Photos" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="backgroundColor">@color/dark_grey</item>
        <item name="colorSurface">@color/dark_grey</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/indigo_A200</item>
        <item name="colorPrimaryVariant">@color/indigo_A700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/dark_grey</item>
        <item name="android:navigationBarColor">@color/dark_grey</item>

        <item name="android:windowLightStatusBar" tools:targetApi="o_mr1">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
    </style>

    <color name="search_bar_background">@color/cardview_dark_background</color>
</resources>